<Window x:Class="PollyFoundation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PollyFoundation"
        mc:Ignorable="d"
        Title="PollyNom" 
        Height="350"
        Width="525"
        MinHeight="200"
        MinWidth="200"
        >
    
    <DockPanel LastChildFill="True">
        <UniformGrid DockPanel.Dock="Bottom" Columns="1" Rows="1" Margin="6,6,6,6">
            <DockPanel Margin="0,0,0,0">
                <Label x:Name="label0" DockPanel.Dock="Left" Content="y =" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <Button x:Name="button0" DockPanel.Dock="Right" Content="Calc" Click="Button0_Click" Height="20"/>
                <TextBox x:Name="textBox0" VerticalAlignment="Center" TextWrapping="Wrap" Text="exp(x)" Height="20"/>
            </DockPanel>
        </UniformGrid>
        <DockPanel Name="dpForCanvas" LastChildFill="True">
            <Canvas x:Name="canvas" Margin="0,0,0,0" 
                    Height="{Binding Path=ActualHeight, ElementName=dpForCanvas}"
                    Width="{Binding Path=ActualWidth, ElementName=dpForCanvas}"
                    />
        </DockPanel>
    </DockPanel>
</Window>
